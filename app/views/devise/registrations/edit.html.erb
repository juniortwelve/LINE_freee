<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :image,"プロフィール画像" %>
  <br>
  <%= image_tag @user.image.thumb.url %>
  <br>
  <%= f.file_field :image%>

  <div class="form-group">
    <%= f.label :name, 'ユーザー名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス'%><br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<!--  <div class="form-group">-->
<!--    <%#= f.label :current_password, '現在のパスワード' %> <i>(変更を適用するには、現在のパスワードを入力してください)</i><br />-->
    <%#= f.password_field :current_password, class: 'form-control' %>
<!--  </div>-->

  <div class="form-group">
    <%= f.label :password, '新しいパスワード' %> <i>(変えない場合は、空白にして下さい)</i><br />
    <%= f.password_field :password, class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上で入力して下さい</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, '新しいパスワードを再入力' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "プロフィール更新", class: 'btn btn-success'%>
  </div>

  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete, data: {confirm: "ログアウトしますか？"}, class: 'btn btn-danger'%>
<% end %>

